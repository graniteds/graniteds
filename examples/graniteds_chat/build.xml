<project name="graniteds-chat" default="deploy">
	
    <property name="Name" value="GraniteDS Char Example"/>
    <property name="example.name" value="graniteds-chat"/>
	
	<property name="war.packaging" value="yes"/>
	
	<property name="flex.application" value="Chat"/>
	<property name="flex.src" value="flex"/>
	<property name="flex.context.root" value="graniteds-chat"/>
	<fileset id="entity.path" dir="classes">
        <exclude name="**"/>
    </fileset>
	<fileset id="service.path" dir="classes">
        <include name="**/*.class"/>
    </fileset>
	<fileset id="event.path" dir="classes">
        <exclude name="**"/>
    </fileset>

	<condition property="main.build" value="../build.xml" else="../graniteds/examples/build.xml">
		<available file="../build.xml"/>
	</condition>
    <import file="${main.build}" />

	<fail unless="FLEX_HOME" message="You must set the 'FLEX_HOME' property in env.properties"/>

	<echo message="  The Tomcat distribution bundled with JBoss 4.2+ is outdated and may have" />
	<echo message="  some issues with Comet support." />
	<echo message="  " />
	<echo message="  The Chat example works better when deployed in a standalone Tomcat 6.0.18+" />
	<echo message="  (just drop the war in your tomcat/webapps directory) or in the new JBoss 5+" />
	<echo message="  server (replace org.granite.gravity.tomcat.GravityTomcatServlet" />
	<echo message="  by org.granite.gravity.jbossweb.GravityJBossWebServlet in web.xml)" />
	<echo message="===============================================================================" />
	
</project>
